hooks.location=~/.task/hooks

# Color theme (uncomment one to use)
#include light-16.theme
#include light-256.theme
# include dark-16.theme
include dark-256.theme
#include dark-red-256.theme
#include dark-green-256.theme
#include dark-blue-256.theme
#include dark-violets-256.theme
#include dark-yellow-green.theme
#include dark-gray-256.theme
#include dark-gray-blue-256.theme
# include solarized-dark-256.theme
#include solarized-light-256.theme
#include no-color.theme

report.default=list
# uda.taskwarrior-tui.style.report.selection=list
urgency.uda.priority.L.coefficient=-2.0
uda.taskwarrior-tui.task-report.show-info=false
# By default, the week starts on Sunday, let's fix that.
weekstart=monday

# Make searches case insensitive, personal preference
search.case.sensitive=no

# Daily burndown
alias.burndown=burndown.daily


uda.sched.type=string
uda.planned.values=mon,tue,wed,thu,fri,sat,sun

active.indicator=>
uda.planned.type=string
uda.planned.values=tod,tw,nw,tm,tq,nm
# Sort the columns a little differently
report.list.columns=id,description,project,priority,planned,due
report.list.labels= ID, Description,Project,Pri,Planned,Due
report.list.sort=planned

report.this_week.description=Tasks this week
report.this_week.filter=((planned:tw ) or (due.after:eow-1week and due.before:eow)) and status:pending
report.this_week.columns=id,description,due.relative
report.this_week.labels=ID,Description,Due
report.this_week.sort=due+

report.projects.filter=projects
report.next_week.description=Tasks next week
# report.next_week.filter=planned:nw and status:pending and due.after:now+1week and due.before:now+2weeks status:pending
report.next_week.filter=((planned:nw ) or (due.after:eow and due.before:sow+2weeks)) and status:pending
report.next_week.columns=id,description,project,due.relative
report.next_week.labels=ID,Description,Project,Due
report.next_week.sort=due+

report.today.description=Tasks today
report.today.filter=(planned:tod or +TODAY or +OVERDUE) and status:pending and priority!=H
report.today.columns=id,description
report.today.labels=ID,Description

report.todays-focus.description=Tasks today
report.todays-focus.filter=priority:H and status:pending and (planned:tod or +TODAY or +OVERDUE)
report.todays-focus.columns=id,description,project
report.todays-focus.labels=ID,Description,Project

report.not_planned.description=not planned
report.not_planned.filter=(planned: and status:pending) and -today
report.not_planned.columns=id,description
report.not_planned.labels=ID,Description


